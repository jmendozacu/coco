	$(function () {
        $("#coll").on("click",function () {
        	var left=$(".slideNav").css("margin-left");
        	if(left!="0px"){
        		$(".cate_cover_opacity").addClass("one");
            	$(".slideNav").animate({marginLeft:"0px"});
            	$(this).addClass("cur");
           }else{
           	$(".slideNav").animate({marginLeft:"-200%"});
           	$(".cate_cover_opacity").removeClass("one");
           	$(this).removeClass("cur");
           }
        });
});
</script>